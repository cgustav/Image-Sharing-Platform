<!-- Modal BS para confirmación de eliminación de imagen  -->

<div id="cdelete-modal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Wait a moment!</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this one?</p>
            </div>
            <div class="modal-footer">
                <button id="modal-accept"type="button" class="btn btn-danger">Delete
                </button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
<!-- FIN MODAL -->

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2>{{image.title}}</h2>
        <button id="btn-delete" class="btn btn-danger" data-id="{{image.uniqueId}}">
            <i class="fa fa-times"></i> Delete
        </button>
    </div>
    <div class="card-body">
        <p>{{image.description}}</p>
        <div class="text-center w-100 h-100">
            <img class="img-fluid" src="/public/upload/{{image.filename}}" alt="" srcset="">
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
        <button id="btn-like" class="btn btn-success" data-id="{{image.filename}}">
            <i class="fas fa-thumbs-up"></i> Like
        </button>
        <p>
            <span class="likes-count">{{image.likes}}</span>
            <i class="fas fa-heart"></i>
        </p>
        <p>
            <i class="fas fa-eye"></i> {{image.views}}
        </p>
        <p>
            <i class="far fa-clock"></i> {{DateConversion image.timestamp}}
        </p>
    </div>
</div>
<div class="card-mt2 bg-white">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3>Comments</h3>
        <button id="btn-toggle-comments" class="btn btn-info">
            <i class="fa fa-comment-o">Post a comment</i>
        </button>
    </div>
    <div class="card-body">
        <blockquote id="post-comment">
            <form action="/images/{{image.uniqueId}}/comment" method="POST">
                <div class="form-group">
                    <input id="ctlName" type="text" class="form-control" name="name" placeholder="Your nickname">
                </div>
                <div class="form-group">
                    <input id="ctlEmail" type="email" class="form-control" name="email" placeholder="Your email">
                </div>
                <div class="form-group">
                    <textarea id="ctlComment" class="form-control" name="comment" placeholder="Whatever!..." rows="2"></textarea>
                </div>
                <div class="form-group">
                    <button id="btnComment" class="btn btn-success">
                        <i class="fa fa-comment"></i> Post
                    </button>
                </div>
            </form>
        </blockquote>
        <ul class="list-group p-4">
            {{#each comments}}
            <li class="list-group-item">
                <div class="row">
                    <a href="#" class="col text-center">
                        <img src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45" alt="">
                    </a>
                    <blockquote class="col">
                        <p class="lead">{{comment}}</p>
                        <footer class="blockquote-footer">
                            {{name}} - {{DateConversion timestamp}}
                        </footer>
                    </blockquote>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</div>