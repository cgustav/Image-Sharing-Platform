<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2>{{result.title}}</h2>
        <button id="btn-delete" class="btn btn-danger" data-id="{{result.uniqueId}}">
            <i class="fa fa-times"></i> Delete
        </button>
    </div>
    <div class="card-body">
        <p>{{result.description}}</p>
        <div class="text-center w-100 h-100">
            <img class="img-fluid" src="/public/upload/{{result.filename}}" alt="" srcset="">
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
        <button id="btn-like" class="btn btn-success" data-id="{{result.filename}}">
            <i class="fas fa-thumbs-up"></i> Like
        </button>
        <p>
            <span class="likes-count">{{result.likes}}</span>
            <i class="fas fa-heart"></i>
        </p>
        <p>
            <i class="fas fa-eye"></i> {{result.views}}
        </p>
        <p>
            <i class="far fa-clock"></i> {{DateConversion result.timestamp}}
        </p>
    </div>
</div>
<div class="card-mt2 bg-white">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3>Comments</h3>
        <button id="btn-toggle-comment" class="btn btn-info">
            <i class="fa fa-comment-o">Post a comment</i>
        </button>
    </div>
    <div class="card-body">
        <blockquote>
            <form action="/images/{{result.uniqueId}}/comment" method="POST">
            <div class="form-group">
                <input id="ctlName" type="text" class="form-control" name="name" placeholder="Your nickname">
            </div>
            <div class="form-group">
                <input id="ctlEmail" type="email" class="form-control" name="email" placeholder="Your email" >
            </div>
            <div class="form-group">
                <textarea id="ctlComment" class="form-control" name="comment" placeholder="Whatever!..." rows="2"></textarea>
            </div>
            <div class="form-group">
                <button id="btnComment" class="btn btn-success">
                    <i class="fa fa-comment"></i> Post
                </button>
            </div>
            </form>
        </blockquote>
    </div>
</div>