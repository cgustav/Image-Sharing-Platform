<!--Extension hbs para handlebars-->
<div class="card">
    <div class="card-header bg-dark">
        <h3 class="card-title text-white">
            <i class="far fa-image"></i> Upload an image
        </h3>
    </div>
    <div class="card-body">
        <form action="/images" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <div class="input-group">
                    <div class="custom-file">
                        <input id="ctlFile" type="file" name="image" class="custom-file-input" aria-describedby="inputGroupFileAddon"
                            required>
                        <label class="custom-file-label" for="ctlFile">Choose file</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input id="ctlTitle" type="text" name="title" class="form-control" placeholder="Title for your image">
            </div>
            <div class="form-group">
                <textarea id="ctlDescription" class="form-control" name="description" placeholder="Put here a description for your image..."
                    cols="30" rows="2" required></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-success">
                    <i class="fa fa-upload"></i> Upload Image
                </button>
            </div>
        </form>
    </div>
</div>


<!-- Obteniendo el arreglo de imagenes obtenidos desde el servidor-->

<div class="card mt-2">
    <div class="card-header bg-dark">
        <h3 class="card-title text-white">
            <i class="far fa-images"></i> Recent Uploads
        </h3>
    </div>
    <div class="card-body">
        <div class="row">
            {{#each images}}
            <div class="col-md-4">
                <a href="/images/{{uniqueId}}">
                    <img src="/public/upload/{{filename}}" alt="" class="w-100 h-100 img-thumbnail">
                </a>
            </div>
            {{/each}}
        </div>
    </div>
</div>